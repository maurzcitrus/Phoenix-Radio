<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sg.edu.nus.iss.ft08.phoenix.schedule.ScheduleProgramDetailActivity"
    tools:showIn="@layout/app_bar_schedule_program_detail">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      tools:layout_constraintTop_creator="1"
      tools:layout_constraintRight_creator="1"
      tools:layout_constraintBottom_creator="1"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginEnd="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      tools:layout_constraintLeft_creator="1"
      android:layout_marginBottom="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintVertical_bias="1.0">

  <LinearLayout
        android:id="@+id/my_form_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/radio_program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Radio Program"
            android:textColor="@color/colorAccent"/>

        <Spinner
            android:id="@+id/radio_program_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Radio Program"
            android:spinnerMode="dropdown"/>

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/presenter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Presenter"
            android:textColor="@color/colorAccent"/>

        <Spinner
            android:id="@+id/presenter_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Presenter"
            android:spinnerMode="dropdown"/>

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/producer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producer"
            android:textColor="@color/colorAccent"/>

        <Spinner
            android:id="@+id/producer_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producer"
            android:spinnerMode="dropdown"/>

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_startdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Start Date"/>
      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Start Time"/>
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_enddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="End Date"/>
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txt_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="End Time"/>
      </android.support.design.widget.TextInputLayout>


    </LinearLayout>
  </ScrollView>

</android.support.constraint.ConstraintLayout>
